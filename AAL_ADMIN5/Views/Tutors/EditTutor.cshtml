@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    var tutor = (SharedModels.Aspnetuser)ViewBag.tutor;
    var language_levels = (List<SharedModels.ELanguageLevel>)ViewBag.language_levels;
    var languages = (List<SharedModels.MLanguage>)ViewBag.languages;
    var countries = (List<SharedModels.MCountry>)ViewBag.countries;
}

<div class="container">
    <div class="row">

        <div class="col-md-12">
                <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" data-toggle="pill" href="#pills-1" role="tab" aria-controls="pills-1" aria-selected="true">Basic</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" data-toggle="pill" href="#pills-2" role="tab" aria-selected="false">Profile</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" data-toggle="pill" href="#pills-3" role="tab" aria-selected="false">Courses</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="pills-1" role="tabpanel">
                        @*row*@
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label><span style="color:red">*</span> Firstname</label>
                                    <input name="Firstname" value="" type="text" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label><span style="color:red">*</span> Surname</label>
                                    <input name="Surname" type="text" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label><span style="color:red">*</span> Email</label>
                                    <input name="Email" type="text" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label><span style="color:red">*</span> Password</label>
                                    <input name="PasswordHash" type="text" class="form-control" value="Tutor#99" required>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="pills-2" role="tabpanel">
                        @* profile *@
                        <form action="~/Tutors/UpdateTutorProfile" method="post">
                            <input type="hidden" name="aspnet_user_id" value="@tutor.Id"/>
                            <div class="row">
                                <div class="col-md-9">
                                    <h5>Image</h5>
                                    @if (String.IsNullOrEmpty(tutor.MTutor.ImageUrl))
                                    {
                        <img src="~/assets/img/profile_place_holder.png" alt="..." class="img-thumbnail profile_picture_console"> }
                                    else
                                    {
                        <img src="@tutor.MTutor.ImageUrl" alt="..." class="img-thumbnail profile_picture_console">}
                                    <br />
                                    <br />
                                    <input type="file" class="form-control-file">
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-9">
                                    <h5>Country</h5>
                                    <div class="form-group">
                                        <select class="chosen-select form-control" name="tutor_country_iso">
                                            @foreach (var country in countries)
                                            {
                                <option value="@country.CountryIso">@country.CountryName</option>}
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-9">
                                    <h5>Languages</h5>
                                    @foreach (var level in language_levels)
                                    {
                        <h6>@level.LanguageLevel</h6>
                                        <div class="form-group">
                                            <select class="chosen-select form-control" multiple name="languageLevel_@level.LanguageLevel">
                                                @foreach (var language in languages)
                                                {
                                <option value="@language.Id">@language.LanguageName</option>}
                                            </select>
                                        </div>}
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-9">
                                    <h5>About</h5>
                                    <textarea rows="5" class="form-control" name="tutor_about" placeholder="type about here ..."></textarea>
                                </div>
                            </div>
                            <br />
                            <br />
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="tab-pane fade" id="pills-3" role="tabpanel">.2..</div>
                </div>
                

        </div>

    </div>
</div>
<script>
    $(".chosen-select").chosen(
        { width: '100%' }
    );
</script>
