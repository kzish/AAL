@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    var course = (SharedModels.MTutorCourse)ViewBag.course;
    var tutor = (SharedModels.Aspnetuser)ViewBag.tutor;
}

<div class="container">
    <div class="row">

        <div class="col-md-12">
            <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" data-toggle="pill" href="#pills-1" role="tab" aria-controls="pills-1" aria-selected="true">Basic</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" data-toggle="pill" href="#pills-2" role="tab" aria-selected="false">Students</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade show active" id="pills-1" role="tabpanel">
                    <div class="row">
                        <div class="col-md-9">
                            <form action="~/Courses/EditCourse" method="post">
                                <input type="hidden" value="@course.Id" name="Id" />
                                <div class="form-group">
                                    <label>Title</label>
                                    <input type="text" name="Title" class="form-control" value="@course.Title.Replace(" - " + tutor.Email, "")" placeholder="Enter course title" required>
                                </div>
                                <div class="form-group">
                                    <label>Description</label>
                                    <textarea class="form-control" name="Description" placeholder="Enter a description" required>@course.Description</textarea>
                                </div>
                                <div class="form-group">
                                    <label>Duration</label>
                                    <input type="text" name="Duration" class="form-control" placeholder="e.g 12 weeks" value="@course.Duration" required>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="pills-2" role="tabpanel">
                    <div class="row">
                        <div class="col-md-9">
                            table
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>